{
  "ConnectionStrings": {
    "DefaultConnection": "DataSource=:memory:",
    "SecurityLogsConnection": "DataSource=:memory:"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "SimpleIdentityServer.API.Middleware.SecurityMonitoringMiddleware": "Warning",
      "SimpleIdentityServer.API.Middleware.DebugLoggingMiddleware": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Application": {
    "OpenIddict": {
      "TokenEndpointUri": "/connect/token",
      "IntrospectionEndpointUri": "/connect/introspect",
      "ConfigurationEndpointUri": "/.well-known/openid-configuration",
      "AccessTokenLifetimeMinutes": 60,
      "RefreshTokenLifetimeDays": 14
    },
    "Certificates": {
      "Password": "",
      "EncryptionCertificatePath": "",
      "SigningCertificatePath": ""
    },
    "Database": {
      "CommandTimeoutSeconds": 30,
      "MaxRetryCount": 3,
      "MaxRetryDelaySeconds": 5
    },
    "SecurityLogging": {
      "RetentionDays": 30,
      "CleanupIntervalHours": 24,
      "BatchPostingLimit": 50,
      "BatchPeriodSeconds": 10
    },
    "Development": {
      "CorsOrigins": [
        "http://localhost:3000",
        "https://localhost:3000",
        "http://localhost:5000",
        "https://localhost:5001"
      ],
      "DefaultConnectionString": "DataSource=:memory:",
      "SecurityLogsConnectionString": "DataSource=:memory:"
    }
  },
  "Kestrel": {
    "RequestHeadersTimeoutSeconds": 30,
    "KeepAliveTimeoutMinutes": 2,
    "MaxRequestBodySize": 1048576,
    "MaxConcurrentConnections": 100
  },
  "RateLimiting": {
    "Global": {
      "PermitLimit": 1000,
      "Window": "00:01:00",
      "ReplenishmentPeriod": "00:00:10",
      "SegmentsPerWindow": 6,
      "AutoReplenishment": true
    },
    "TokenPolicy": {
      "PermitLimit": 100,
      "Window": "00:01:00",
      "ReplenishmentPeriod": "00:00:10",
      "SegmentsPerWindow": 6,
      "AutoReplenishment": true
    },
    "IntrospectionPolicy": {
      "PermitLimit": 50,
      "Window": "00:01:00",
      "ReplenishmentPeriod": "00:00:10",
      "SegmentsPerWindow": 6,
      "AutoReplenishment": true
    }
  }
}
